  "version": "0.2.0",
  "configurations": [
    {
      "name": "Custom API Debugger",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/api/src/index.ts"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}/api",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "development",
        "TS_NODE_IGNORE": "false"
      }
    }
  ]
}
