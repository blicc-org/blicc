{
  "name": "blicc",
  "version": "0.0.1",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "cross-env": "^5.2.1",
    "husky": "^3.0.5",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "start": "yarn --cwd 'db' start && yarn --cwd 'api' start",
    "fix": "yarn --cwd 'app' fix && yarn --cwd 'api' fix",
    "format": "prettier --config .prettierrc --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|html)\"",
    "install": "yarn --cwd 'db' install && yarn --cwd 'app' install && yarn --cwd 'api' install",
    "build": "yarn --cwd 'app' build && yarn --cwd 'api' build",
    "docs": "yes | cp -f -a ./{README.md,LICENSE,docs} ./app/public/",
    "test": "cross-env CI=true yarn --cwd 'app' test && yarn --cwd 'api' test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn format",
      "pre-push": "yarn fix && yarn docs"
    }
  }
}
