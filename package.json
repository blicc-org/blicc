{
  "name": "blicc",
  "version": "0.0.4",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "cross-env": "^6.0.3",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^3.0.9",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "fix": "yarn --cwd 'app' fix && yarn --cwd 'api' fix",
    "format": "prettier --config .prettierrc --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|html|babelrc)\"",
    "install": "yarn --cwd 'db' install && yarn --cwd 'app' install && yarn --cwd 'api' install",
    "build": "yarn --cwd 'app' build && yarn --cwd 'api' build",
    "test": "cross-env CI=true yarn --cwd 'app' test && yarn --cwd 'api' test",
    "lines": "git ls-files | grep '\\(.js\\|.jsx\\|.ts\\|.tsx\\|.scss\\|.json\\|.go\\)$' | xargs cat | wc -l"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn format",
      "pre-push": "yarn fix"
    }
  },
  "dependencies": {}
}
