{
  "name": "blicc",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "cross-env": "^5.2.0",
    "husky": "^3.0.0",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "test": "cross-env CI=true yarn --cwd 'app' test && yarn --cwd 'api' test",
    "fix": "yarn --cwd 'app' fix && yarn --cwd 'api' fix",
    "format": "prettier --config .prettierrc --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|mdx)\"",
    "build": "yarn --cwd 'app' build && yarn --cwd 'api' build"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn format",
      "pre-push": "yarn fix"
    }
  }
}
